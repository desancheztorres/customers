{
  "name": "arcmedia/technical-test",
  "type": "project",
  "description": "Technical Test",
  "require": {
    "php": "^8.1",
    "ext-mysqli": "*",
    "guzzlehttp/guzzle": "^7.2",
    "monolog/monolog": "^3.2",
    "ramsey/uuid": "^4.5",
    "symfony/console": "^6.1",
    "symfony/dependency-injection": "^6.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5.10"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Src\\": "src/"
    },
    "classmap": ["src"]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
